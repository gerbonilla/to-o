        <select cf-questions="Gracias! Ahora dinos un poco de tu veh칤culo. Escoge una marca:" name="autoBrand" id="autoBrand" class="form-control">
          <option></option>
          <option>Audi</option>
          <option>BMW</option>
          <option>Ford</option>
          <option>Honda</option>
          <option>Hyundai</option>
          <option>Kia</option>
          <option>Mazda</option>
          <option>Mercedes</option>
          <option>Mitsubishi</option>
          <option>Nissan</option>
          <option>Toyota</option>
          <option>Volkswagen</option>
        </select>
      </fieldset>
      <!-- autoModel -->
      <fieldset>
        <label for="autoModel">Modelo</label>
        <input required cf-questions="Que modelo de {previous-answer} es tu veh칤culo?" type="text" class="form-control" name="autoModel" id="autoModel">
      </fieldset>
      <!-- autoFeatures -->
<!--       <fieldset cf-questions="Tu vehiculo es:">
        <label for="blindado">Nuevo</label>
        <input  required type="checkbox" name="nuevo" id="nuevo" value="Nuevo">
      </fieldset> -->
      <!-- ownerDUI -->
      <fieldset>
        <label for="ownerDUI">ownerDUI</label>
        <input required cf-questions="{firstName}, cual es tu n칰mero de DUI?" type="text" class="form-control" name="ownerDUI" id="ownerDUI">
      </fieldset>
      <!-- ownerDOB -->
      <fieldset>
        <label for="ownerDOB">ownerDOB</label>
        <input required cf-questions="Cual es tu fecha de nacimiento?" type="text" class="form-control" name="ownerDOB" id="ownerDOB">
      </fieldset>
      <!-- ownerPhone -->
      <fieldset>
        <label for="ownerPhone">ownerPhone</label>
        <input required cf-questions="칔ltima pregunta!&&Cual es tu n칰mero de telefono?" type="text" class="form-control" name="ownerPhone" id="ownerPhone">
      </fieldset>

      <button type="submit" class="btn btn-default">Submit</button>
    <% end %>
    <!-- </form> -->
  </div>


  <div class="form-info-wrapper">
    <h3>Seguro de Autos</h3>
  </div>
</div>



