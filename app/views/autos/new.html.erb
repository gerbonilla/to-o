<% content_for :head_zoom do %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1,user-scalable=0"/>
<% end %>
<script type="text/javascript" src="https://cf-4053.kxcdn.com/conversational-form/0.9.6/conversational-form.min.js" crossorigin></script>

<div class="form-main-wrapper">
  <div cf-context class="form-content-wrapper cf-context">
    <form cf-form id="cf-form" method="post" action="/autos">

    <%= simple_form_for @auto, html: {"cf-form": true, id: "cf-form"} do %>

      <!-- firstName -->
      <fieldset>
        <label for="firstName">Cu치l es tu primer nombre?</label>
        <input required cf-questions="Para darte las mejores cuotas, necesito saber m치s sobre ti 游땕&& Cual es tu primer nombre?" type="text" class="form-control" name="firstName" id="firstName">
      </fieldset>
      <!-- lastName -->
      <fieldset>
        <label for="lastName">Apellido</label>
        <input required cf-questions="Mucho gusto, {previous-answer}! Cu치l es tu apellido?" type="text" class="form-control" name="lastName" id="lastName">
      </fieldset>
      <!-- email -->
      <fieldset>
        <label for="email">email</label>
        <input required pattern=".+\@.+\..+" cf-error="Por favor escribe un e-mail v치lido" cf-questions="Muy bien, ahora escribe to e-mail:" type="email" class="form-control" name="email" id="email">
